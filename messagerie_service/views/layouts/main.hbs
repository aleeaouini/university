            </nav>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="content-header">
                <h2>Messagerie</h2>
            </div>
            <div class="content-body">
                {{{body}}}
            </div>
        </div>
    </div>
</body>
</html>