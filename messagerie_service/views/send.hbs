<div class="chat-container">
    <div style="max-width: 600px; margin: 0 auto;">
        <div class="message-card">
            <h3 style="margin-bottom: 20px; color: #2d3748;">Envoyer un nouveau message</h3>
            <form method="POST" action="/send/{{userId}}">
                <div style="margin-bottom: 20px;">
                    <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #4a5568;">
                        Destinataire
                    </label>
                    <input 
                        type="text" 
                        name="dest_nom" 
                        placeholder="Ex: Khalil Ksontini" 
                        required 
                        class="message-input"
                        style="width: 100%; border-radius: 10px;"
                    >
                </div>

                <div style="margin-bottom: 25px;">
                    <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #4a5568;">
                        Message
                    </label>
                    <textarea 
                        name="contenu" 
                        required 
                        class="message-input"
                        placeholder="Tapez votre message ici..."
                        style="width: 100%; border-radius: 15px; min-height: 120px; resize: vertical;"
                    ></textarea>
                </div>

                <button type="submit" class="send-button" style="border-radius: 12px; width: auto; padding: 12px 30px;">
                    <span style="margin-right: 8px;">ğŸ“¨</span>
                    Envoyer le message
                </button>
            </form>
        </div>
    </div>
</div>